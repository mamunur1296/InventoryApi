@model InventoryUi.Models.Branch
@using System.Security.Claims
@using Microsoft.IdentityModel.JsonWebTokens

@{
    var userName = string.Empty;

    if (User.Identity.IsAuthenticated)
    {
        var claimsIdentity = User.Identity as ClaimsIdentity;
        if (claimsIdentity != null)
        {
            // Extract the username from claims
            var userNameClaim = claimsIdentity.FindFirst(ClaimTypes.Name);
            if (userNameClaim != null)
            {
                userName = userNameClaim.Value;
            }
        }
    }
}
<!-- Modal -->
<div class="modal fade" id="BranchModelCreate" tabindex="-1" role="dialog" aria-labelledby="myModalLabelAddEmployee" aria-hidden="true">
    <div class="modal-dialog modal-sm" style="max-width: 65%; max-height: 80%;">
        <div class="modal-content" style="height: 100%; overflow: hidden;">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabelAddBranch">Add Branch</h4>
                <h4 class="modal-title" style="display:none;" id="myModalLabelUpdateBranch">Update Branch</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="height: calc(100% - 60px); overflow-y: auto;">
                <form id="BranchForm">
                    <input type="hidden" asp-for="CreatedBy" value="@userName" />
                    <input type="hidden" asp-for="UpdatedBy" value="@userName" />
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" placeholder="Enter Branch  Name " class="form-control" name="Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FullName" class="control-label"></label>
                                    <input asp-for="FullName" placeholder="Enter Branch Full Name " class="form-control" name="FullName" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ContactPerson" class="control-label"></label>
                                    <input asp-for="ContactPerson" placeholder="Enter Branch Contact Person" class="form-control" name="ContactPerson" />
                                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Address" class="control-label"></label>
                                    <input asp-for="Address" placeholder="Enter Branch Address " class="form-control" name="Address" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PhoneNo" class="control-label"></label>
                                    <input asp-for="PhoneNo" placeholder="Enter Branch Phone Number" class="form-control" name="PhoneNo" />
                                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FaxNo" class="control-label"></label>
                                    <input asp-for="FaxNo" placeholder="Enter Branch Fax No" class="form-control" name="FaxNo" />
                                    <span asp-validation-for="FaxNo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="EmailNo" class="control-label"></label>
                                    <input asp-for="EmailNo" placeholder="Enter Branch Email" class="form-control" name="EmailNo" />
                                    <span asp-validation-for="EmailNo" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label class="control-label" asp-for="CompanyId"></label>
                                    <select class="form-control" asp-for="CompanyId" id="CompanyDropdown">
                                        <option value="">Select Company</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="BranchBtnSave">Save</button>
                <button type="button" class="btn btn-primary" id="BranchBtnUpdate">Update</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>