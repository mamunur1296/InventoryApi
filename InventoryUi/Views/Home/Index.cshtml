@model InventoryUi.ViewModel.ProductListVm
@{
    ViewData["Title"] = "Home Page";
}

<section class="row">
   <div class="col-8">
        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://picsum.photos/800/400?image=10" class="d-block w-100" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img src="https://picsum.photos/800/400?image=20" class="d-block w-100" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img src="https://picsum.photos/800/400?image=30" class="d-block w-100" alt="Third slide">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
   </div>
    <div class="col-4" style="background-color: #f5f5f5; height: 370px; overflow-y: auto;">
        <h5 class="mt-5">Upcoming Product</h5>
        <div class="row bg-white py-3 mx-2">
            <div class="col-6 position-relative">
                <img src="https://picsum.photos/250/150" alt="Company Logo" class="img-fluid h-100 rounded">
                @* <div class="position-absolute bottom-0 start-50 translate-middle-x w-100 text-white px-2  rounded">
                    Company Name
                </div> *@
            </div>
            <div class="col-6">
                <div class="row gap-2">
                    <div class="col-5 bg-dark py-3 text-lg-center fw-bolder text-white text-center">1d</div>
                    <div class="col-5 bg-dark py-3 text-lg-center fw-bolder text-white text-center">1h</div>
                    <div class="col-5 bg-dark py-3 text-lg-center fw-bolder text-white text-center">1m</div>
                    <div class="col-5 bg-dark py-3 text-lg-center fw-bolder text-white text-center">1s</div>
                </div>
            </div>
        </div>

        

       
    </div>

</section>

<section>
    <div class=" mt-5">
        <h2 class="">
            <i class="fas fa-fire text-danger"></i>
            Popular Products
        </h2>


        <!-- Swiper -->
        <div class="swiper Product1 m-5">
            <div class="swiper-wrapper" id="PopularProductSection">
                <!-- Slide 1 -->
                
               
            </div>
            <!-- Add Pagination -->
            <div class="swiper-pagination"></div>
            <!-- Add Navigation -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>

</section>

<section>
    <div class=" mt-5">
        <h2 class="">
            <i class="fas fa-chart-line text-primary"></i>
            Trending Now
        </h2>
        <!-- Swiper -->
        <div class="swiper Product2 m-5">
            <div class="swiper-wrapper" id="TrendingProductSection">
                
            </div>
            <!-- Add Pagination -->
            <div class="swiper-pagination"></div>
            <!-- Add Navigation -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>

</section>


<section>
    <div class=" mt-5">

        <div class="d-flex justify-content-between align-items-center p-3">
            <h2>Products</h2>
            <a asp-action="Serch" asp-controller="Home" class="show-more btn bg-transparent text-dark px-3 py-2" style="background-color: transparent; color: black;">Show more</a>
        </div>


        <div class="row m-5">
            <div id="ProductSection" class="row">
                <!-- The product cards will be dynamically inserted here -->
            </div>
        </div>


        
    </div>

</section>


@section Scripts {
    <script type="module" src="~/js/home/home.js" asp-append-version="true"></script>
}