@model InventoryUi.ViewModel.ProductListVm
@{
    ViewData["Title"] = "Serch";
}

<div class="d-flex justify-content-between align-items-center p-3">
    <p class="fs-5 text-muted" id="results-count">Showing 0 results for</p>
    <div class="d-flex">
        <p class="me-4"> </p>
        <a href="#" id="sortPrice" class="text-decoration-none">Sort By Price</a>
    </div>
</div>


<section>
    <div class="row">
        <div class="col-md-2">
            <div class="d-flex justify-content-between align-items-center px-3">
