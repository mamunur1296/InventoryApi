@model InventoryUi.ViewModel.NewOrderVm
@using System.Security.Claims
@using Microsoft.IdentityModel.JsonWebTokens

@{
    var userName = string.Empty;

    if (User.Identity.IsAuthenticated)
    {
        var claimsIdentity = User.Identity as ClaimsIdentity;
        if (claimsIdentity != null)
        {
            // Extract the username from claims
            var userNameClaim = claimsIdentity.FindFirst(ClaimTypes.Name);
            if (userNameClaim != null)
            {
                userName = userNameClaim.Value;
            }
        }
    }
}
<!-- Modal -->
<div class="modal fade" id="UnitMasterModelCreate" tabindex="-1" role="dialog" aria-labelledby="myModalLabelAddEmployee" aria-hidden="true">
    <div class="modal-dialog modal-sm" style="max-width: 65%; max-height: 80%;">
        <div class="modal-content" style="height: 100%; overflow: hidden;">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabelAddEmployee">Add Unit Master</h4>
                <h4 class="modal-title" style="display:none;" id="myModalLabelUpdateEmployee">Update Unit Master</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="height: calc(100% - 60px); overflow-y: auto;">
                <form id="CreateUnitMasterForm" asp-action="Create" asp-controller="UnitMaster" method="post">
                    <input type="hidden" asp-for="UnitMaster.CreatedBy" value="@userName" />
                    <input type="hidden" asp-for="UnitMaster.UpdatedBy" value="@userName" />
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UnitMaster.Name" class="control-label"></label>
                                    <input asp-for="UnitMaster.Name" placeholder="Enter Category Name (e.g., Electronics)" class="form-control" name="Name" />
                                    <span asp-validation-for="UnitMaster.Name" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UnitMaster.UnitMasterDescription" class="control-label"></label>
                                    <input asp-for="UnitMaster.UnitMasterDescription" placeholder="Enter Category Description (e.g., Devices and gadgets)" class="form-control" name="UnitMasterDescription" />
                                    <span asp-validation-for="UnitMaster.UnitMasterDescription" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </form>

            </div>
            
        </div>
    </div>
</div>