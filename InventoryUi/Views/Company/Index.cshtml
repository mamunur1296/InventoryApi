@model InventoryUi.Models.Company
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- /.card -->
                <div class="card">
                     <div class="card-header ">
                        <div class="row">
                            <div class="col-md-6"> 
                                <h3 class="card-title font-weight-bold fs-1 color-primary">Company List</h3>
                            </div>
                            <div class="col-md-6 d-flex justify-content-end ">
                                  <a id="CreateUserBtn" class="btn btn-success"> <i class="fa fa-plus"></i> Create New Company</a>
                            </div>
                        </div>
                    </div>
                    <div id="successMessage" class="alert alert-success" role="alert" style="display: none;">
                        <button id="btnClose" type="button" class="btn-close" aria-label="Close"></button>
                    </div>
                    <div id="globalErrorMessage" class="alert alert-danger" role="alert" style="display: none;">
                        <button id="btnClose" type="button" class="btn-close" aria-label="Close"></button>
                    </div>

                    <!-- /.card-header -->

                    <div class="card-body">
                        <table id="CompanyTable" class="table table-bordered table-striped">
                            
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Full Name </th>
                                    <th>Contact Person  </th>
                                    <th>Address</th>
                                    <th>Phone</th>
                                    <th>Fax</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>

                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>



<!-- Modal -->
<div class="modal fade" id="modelCreate" tabindex="-1" role="dialog" aria-labelledby="myModalLabelAddEmployee" aria-hidden="true">
    <div class="modal-dialog modal-sm" style="max-width: 65%; max-height: 80%;">
        <div class="modal-content" style="height: 100%; overflow: hidden;">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabelAddEmployee">Add Company</h4>
                <h4 class="modal-title" style="display:none;" id="myModalLabelUpdateEmployee">Update Company</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="height: calc(100% - 60px); overflow-y: auto;">
                <form id="CompanyForm">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" placeholder="Enter Company Name (e.g., Acme Corp)" class="form-control" name="Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FullName" class="control-label"></label>
                                    <input asp-for="FullName" placeholder="Enter Company Full Name (e.g., Acme Corporation Ltd.)" class="form-control" name="FullName" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ContactPerson" class="control-label"></label>
                                    <input asp-for="ContactPerson" placeholder="Enter Contact Person Name (e.g., John )" class="form-control" name="ContactPerson" />
                                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address" class="control-label"></label>
                                    <input asp-for="Address" placeholder="Enter Company Address (e.g., 123 Main St, City)" class="form-control" name="Address" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PhoneNo" class="control-label"></label>
                                    <input asp-for="PhoneNo" placeholder="Enter Company Phone (e.g., +1 234-567-8900)" class="form-control" name="PhoneNo" />
                                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FaxNo" class="control-label"></label>
                                    <input asp-for="FaxNo" placeholder="Enter Company Fax Number (e.g., +1 234-567-8901)" class="form-control" name="FaxNo" />
                                    <span asp-validation-for="FaxNo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="EmailNo" class="control-label"></label>
                                    <input asp-for="EmailNo" placeholder="Enter Company Email Address (e.g., info@acme.com)" class="form-control" name="EmailNo" />
                                    <span asp-validation-for="EmailNo" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-5 form-check">
                                    <input asp-for="IsActive" type="checkbox" class="form-check-input" id="IsActiveCheckbox" />
                                    <label asp-for="IsActive" class="form-check-label" for="IsActiveCheckbox">Is Active</label>
                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSave">Save</button>
                <button type="button" class="btn btn-primary" id="btnUpdate">Update</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>











<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteAndDetailsModel" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                Are you sure you want to delete the following Company ?
            </div>
            <div id="DeleteErrorMessage" class="modal-header" role="alert" style="display: none;">
                <!-- Error message will be displayed here if deletion fails -->
            </div>
            <div class="modal-body" id="companyDetails">
                <!-- Company details will be populated dynamically by jQuery -->
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnDelete">Delete</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="module" src="~/js/dashboard/company.js"></script>
}