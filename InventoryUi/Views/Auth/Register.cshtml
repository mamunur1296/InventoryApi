@model InventoryUi.Models.Register

@{
    ViewData["Title"] = "Register";
}

<div class="d-flex my-5 justify-content-center align-items-center bg-light">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center mb-4">Create your Inventory account</h2>
            <form asp-action="CreateUser" method="post">
                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <!-- First Name and Last Name in the same row -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="FirstName" class="control-label"></label>
                        <div class="input-group">
                            <input placeholder="Enter your First Name" asp-for="FirstName" class="form-control" />
                           
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="LastName" class="control-label"></label>
                        <div class="input-group">
                            <input placeholder="Enter your Last Name" asp-for="LastName" class="form-control" />
                            
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <!-- Email and Phone Number in the same row -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <div class="input-group">
                            <input placeholder="Enter your Valid Email" asp-for="Email" class="form-control" />
                            <span class="input-group-text">
                                <img src="~/projectrootimg/email_icon.jpeg" alt="Email Icon" class="img-fluid" style="height: 20px;" />
                            </span>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <div class="input-group">
                            <input placeholder="Enter your Phone Number" asp-for="PhoneNumber" class="form-control" />
                            <span class="input-group-text">
                                <img src="~/projectrootimg/Phone_Icone.jpeg" alt="Phone Icon" class="img-fluid" style="height: 20px;" />
                            </span>
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <!-- Username in its own row -->
                    <div class="col-12 mb-3">
                        <label asp-for="UserName" class="control-label"></label>
                        <div class="input-group">
                            <input placeholder="Enter your User Name" asp-for="UserName" class="form-control" />
                            <span class="input-group-text">
                                <img src="~/projectrootimg/user_name.jpeg" alt="Username Icon" class="img-fluid" style="height: 20px;" />
                            </span>
                        </div>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <!-- Password and Confirm Password in the same row -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Password" class="control-label"></label>
                        <div class="input-group">
                            <input type="password" placeholder="Enter your Password" asp-for="Password" class="form-control" />
                            <span class="input-group-text">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
                                    <path d="M8 1a3 3 0 0 0-3 3v3H4V4a4 4 0 1 1 8 0v3h-1V4a3 3 0 0 0-3-3z" />
                                    <path d="M4.5 8.5v6A1.5 1.5 0 0 0 6 16h4a1.5 1.5 0 0 0 1.5-1.5v-6A1.5 1.5 0 0 0 10 7H6a1.5 1.5 0 0 0-1.5 1.5zM8 9.5a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5z" />
                                </svg>
                            </span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ConfirmationPassword" class="control-label"></label>
                        <div class="input-group">
                            <input type="password" placeholder="Enter your Confirm Password" asp-for="ConfirmationPassword" class="form-control" />
                            <span class="input-group-text">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
                                    <path d="M8 1a3 3 0 0 0-3 3v3H4V4a4 4 0 1 1 8 0v3h-1V4a3 3 0 0 0-3-3z" />
                                    <path d="M4.5 8.5v6A1.5 1.5 0 0 0 6 16h4a1.5 1.5 0 0 0 1.5-1.5v-6A1.5 1.5 0 0 0 10 7H6a1.5 1.5 0 0 0-1.5 1.5zM8 9.5a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5z" />
                                </svg>
                            </span>
                        </div>
                        <span asp-validation-for="ConfirmationPassword" class="text-danger"></span>
                    </div>
                </div>

                <!-- Create Account Button -->
                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-dark">Create Account</button>
                </div>

                <!-- Already have an account -->
                <div class="text-center">
                    <p class="text-muted">
                        Already have an account?
                        <a asp-action="Login" asp-controller="Auth" class="text-decoration-underline">Sign in</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
