@model InventoryUi.Models.Login

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryUi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryUi.styles.css" asp-append-version="true" />
    <!-- Toastr CSS -->
    <link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css">
</head>
<body>

    <div class="d-flex my-5 justify-content-center align-items-center">
        <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
            <div class="card-body">
                <h2 class="text-center mb-4">Login to Inventory</h2>
                <form asp-action="LoginUser">
                    <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Email Field -->
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="UserName" class="form-control" placeholder="Enter User Name" />
                            <span class="input-group-text">
                                <img src="~/projectrootimg/user_name.jpeg" alt="Email Icon" class="img-fluid" style="height: 20px;" />
                            </span>
                        </div>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <div class="input-group">
                            <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password" />
                            <span class="input-group-text">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
                                    <path d="M8 1a3 3 0 0 0-3 3v3H4V4a4 4 0 1 1 8 0v3h-1V4a3 3 0 0 0-3-3z" />
                                    <path d="M4.5 8.5v6A1.5 1.5 0 0 0 6 16h4a1.5 1.5 0 0 0 1.5-1.5v-6A1.5 1.5 0 0 0 10 7H6a1.5 1.5 0 0 0-1.5 1.5zM8 9.5a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5z" />
                                </svg>
                            </span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-dark">Login</button>
                    </div>


                </form>

                <div class="text-center mt-4">
                    <p class="text-muted">
                        Don't have an account?
                        <a asp-action="Register" asp-controller="Auth" class="text-primary text-decoration-underline">Sign up</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Toastr JS -->
    <script src="~/lib/toastr.js/toastr.min.js" asp-append-version="true"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" asp-append-version="true"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/YOUR-KIT-ID.js" asp-append-version="true" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
</body>

