@model InventoryUi.POC.MenuViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form asp-action="CreateProduct" method="post" id="createProductForm">
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NewMenu.Name" class="control-label"></label>
                    <input asp-for="NewMenu.Name" placeholder="Enter Product Name" class="form-control" />
                    <span asp-validation-for="NewMenu.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NewMenu.Url" class="control-label"></label>
                    <input asp-for="NewMenu.Url" placeholder="Enter Product URL" class="form-control" />
                    <span asp-validation-for="NewMenu.Url" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>

<!-- Placeholder for the product list -->
<div id="productList">
    @await Html.PartialAsync("ProductList", Model.Menus) <!-- This will load the initial product list -->
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#createProductForm').submit(function (e) {
                e.preventDefault(); // Prevent the default form submission

                $.ajax({
                    url: $(this).attr('action'), // Use the form's action attribute
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (result) {
                        // Replace the content of the productList div with the returned partial view
                        $('#productList').html(result);
                    },
                    error: function () {
                        alert('An error occurred while creating the product.');
                    }
                });
            });
        });
    </script>
}
