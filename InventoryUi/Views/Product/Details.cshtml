@model InventoryUi.ViewModel.ProductDetailsVm
@{
    ViewData["Title"] = "Details";
}

<section class="container my-5">
    <div class="row">
        <!-- Product Image Column -->
        <div class="col-md-6">
            <img src="/images/Product/@Model?.Product.ImageURL"
                 alt="Product Image"
                 class="img-fluid rounded shadow-sm"
                 style="width: 100%; height: 100%; object-fit: cover;"
                 onerror="this.onerror=null;this.src='/ProjectRootImg/default-user.png';">
        </div>

        <!-- Product Details Column -->
        <div class="col-md-6">
            <h1 class="display-5 mb-3">@Model?.Product?.ProductName</h1>

            <!-- Category and Brand Info -->
            <div class="d-flex align-items-center mb-3">
                <span class="fw-bold me-2">Category:</span>
                <span>@Model?.Category?.CategoryName</span>
                <span class="mx-2 text-muted">|</span>
                <span class="fw-bold me-2">Brand:</span>
                <span>Product Brand</span>
            </div>

            <!-- Specifications -->
            <div class="mb-3">
                <p class="fw-bold">Specifications:</p>
                <ul class="list-unstyled">
                    <li><strong>Brand:</strong> Product Brand</li>
                    <li><strong>Product Type:</strong> Product Type</li>
                    <li><strong>Weight:</strong> Product Weight</li>
                </ul>
            </div>

            
        </div>
    </div>
</section>
<section>
    <h6>Buy From</h6>
   <div class="row">
        <!-- Vendor/Delivery Section -->
        <div class="bg-white p-4 rounded shadow-sm mb-4 col-md-3">
            <!-- Vendor Header -->
            <div class="d-flex align-items-center mb-3">
                <!-- Vendor Image -->
                <div class="me-3">
                    <img src="/images/vendor-placeholder.png"
                         alt="Vendor"
                         class="rounded-circle border"
                         style="width: 60px; height: 60px; object-fit: cover;"
                         onerror="this.onerror=null;this.src='/ProjectRootImg/defoltlogo.png';">
                </div>
                <!-- Vendor Details -->
                <div>
                    <h5 class="m-0 fw-bold">@Model?.Supplier?.SupplierName</h5>
                    <small class="text-muted">Delivery in 1-15 Days</small>
                </div>
            </div>

            <!-- Vendor Location -->
            <div class="text-muted mb-2">
                <i class="bi bi-geo-alt-fill"></i> @Model?.Supplier?.Address
            </div>

            <!-- Delivery Information -->
            <div class="text-muted mb-2">
                <i class="bi bi-truck"></i> Delivery:
                <span class="fw-semibold">৳130</span>
                <small class="text-muted">(৳190 Outside Area)</small>
            </div>

            <!-- Stock Information -->
            <div class="text-muted mb-2">
                <i class="bi bi-box-seam"></i> Stock:
                <span class="fw-semibold">@Model?.Product?.UnitsInStock</span>
            </div>

            <!-- Price Section with Discount Logic -->
            <div class="mb-3">
                @{
                    var originalPrice = @Model?.Product?.UnitPrice ?? 0;
                    var discount = @Model?.Product?.Discount ?? 0;
                    var discountedPrice = originalPrice - (originalPrice * discount / 100);
                }

                @if (discount > 0)
                {
                    <span class="fw-bold fs-4 text-success">৳@discountedPrice.ToString("0.00")</span>
                    <span class="text-muted text-decoration-line-through">৳@originalPrice.ToString("0.00")</span>
                    <span class="badge bg-danger">@discount% Off</span>
                }
                else
                {
                    <span class="fw-bold fs-4">৳@originalPrice.ToString("0.00")</span>
                }
            </div>

            <!-- Add to Cart Button - Disable if out of stock -->
            <div>
                @if (@Model?.Product?.UnitsInStock > 0)
                {
                    <button class="btn btn-primary w-100 py-2">
                        <i class="bi bi-cart-fill me-2"></i> Add to Cart
                    </button>
                }
                else
                {
                    <button class="btn btn-secondary w-100 py-2" disabled>
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Out of Stock
                    </button>
                }
            </div>
        </div>



   </div>
  
</section>
<section>
    <h5>Releted Product</h5>
    <div class="mt-5">
        <div class="row m-5">
            <div id="RelatedProductSection" data-existing-product-category-id="@Model?.Product?.CategoryID" data-existing-product-id="@Model?.Product?.Id" class="row">
                <!-- The related product cards will be dynamically inserted here -->
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <script type="module" src="~/js/home/home.js" asp-append-version="true"></script>
}