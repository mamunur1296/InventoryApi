@model InventoryUi.Models.Leave
@using System.Security.Claims
@using Microsoft.IdentityModel.JsonWebTokens

@{
    var userName = string.Empty;

    if (User.Identity.IsAuthenticated)
    {
        var claimsIdentity = User.Identity as ClaimsIdentity;
        if (claimsIdentity != null)
        {
            // Extract the username from claims
            var userNameClaim = claimsIdentity.FindFirst(ClaimTypes.Name);
            if (userNameClaim != null)
            {
                userName = userNameClaim.Value;
            }
        }
    }
}
<!-- Modal -->
<div class="modal fade" id="LeaveModelCreate" tabindex="-1" role="dialog" aria-labelledby="myModalLabelAddEmployee" aria-hidden="true">
    <div class="modal-dialog modal-sm" style="max-width: 65%; max-height: 80%;">
        <div class="modal-content" style="height: 100%; overflow: hidden;">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabelAddBranch">Add Leave</h4>
                <h4 class="modal-title" style="display:none;" id="myModalLabelUpdateBranch">Update Leave</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="height: calc(100% - 60px); overflow-y: auto;">
                <form id="LeaveForm">
                    <input type="hidden" asp-for="CreatedBy" value="@userName" />
                    <input type="hidden" asp-for="UpdatedBy" value="@userName" />
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label" asp-for="EmployeeId"></label>
                                    <select class="form-control" asp-for="EmployeeId" id="EmployeeDropdown">
                                        <option value="">Select Employee</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LeaveType" class="control-label"></label>
                                    <select asp-for="LeaveType" class="form-control">
                                        @foreach (var leaveType in Enum.GetValues(typeof(InventoryUi.Models.LeaveType)))
                                        {
                                            <option value="@leaveType.ToString()">@leaveType</option>  <!-- Save enum as text -->
                                        }
                                    </select>
                                    <span asp-validation-for="LeaveType" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <label asp-for="Reason" class="control-label"></label>
                                    <input asp-for="Reason" placeholder="Enter check-out time (e.g., 06:00 PM)" class="form-control" name="Reason" />
                                    <span asp-validation-for="Reason" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="StartDate" class="control-label"></label>
                                    <input asp-for="StartDate" placeholder="Enter check-out time (e.g., 06:00 PM)" class="form-control" name="StartDate" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="EndDate" class="control-label"></label>
                                    <input  asp-for="EndDate" placeholder="Enter check-out time (e.g., 06:00 PM)" class="form-control" name="EndDate" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                               
                                <div class="form-group mt-5 mx-5 d-flex align-items-center">
                                    <input asp-for="IsApproved" type="checkbox" class="form-check-input" id="IsApprovedCheckbox" />
                                    <label asp-for="IsApproved" class="form-check-label ms-2" for="IsApprovedCheckbox">IsApproved</label>
                                    <span asp-validation-for="IsApproved" class="text-danger ms-3"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="LeaveBtnSave">Save</button>
                <button type="button" class="btn btn-primary" id="LeaveBtnUpdate">Update</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>